<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body  onload="init();">
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->


	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>

			<% products.forEach(product => { %>

			<div class="col-12 col-sm-6 col-lg-3">

				<section class="product-box">
					<a href="/products/detail/<%= product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= product.price %></h2>
							<p><%= product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>

			</div>
			<% }) %>

		</div>

		<div class="special">
			<h2  class="products-title">Pedidos Especiales</h2>
			<h2>- Link para ir a: <a href="https://google.com.ar" target="_blank">Google</a></h2>
			<h2>- Canvas:</h2>
			<canvas id="demoCanvas" width="500" height="200"></canvas>
		</div>
	</div>

	



	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>