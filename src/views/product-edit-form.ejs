<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' +  product.name }) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <%= product.name %> </h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= product.id %>?_method=PUT" method="POST">
				<div class="row product-detail">

					<!-- Nombre del producto -->
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= product.name %>" class="form-input">
					</div>

					<!-- Precio de producto -->
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= product.price %>" class="form-input">
					</div>

					<!-- Código del producto -->
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Código del producto:</label>
						<input type="text" id="code" name="code" value="<%= product.code %>" class="form-input">
					</div>

					<!-- Color de producto -->
					<div class="col-12 col-md-6">
						<label for="color" class="form-label">Color del producto:</label>
						<input type="color" id="color" name="color" value="<%= product.color %>" class="form-input">
					</div>

					<!-- Cantidad de productos -->
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Cantidad de productos:</label>
						<input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" class="form-input">
					</div>

					<!-- Peso del producto -->
					<div class="col-12 col-md-6">
						<label for="weight" class="form-label">Peso en Kilogramos:</label>
						<input type="number" name="weight" id="weight" class="form-input" value="<%= product.weight %>"></input>
					</div>

					<!-- Imagen del producto -->
					<div class="col-12 col-md-6">
						<label for="image" class="form-label">Imagen</label>
						<input type="file" name="image" class="form-input input-img">
						
					</div>

					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>